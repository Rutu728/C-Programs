#include<stdio.h>
#include<conio.h>

int main()

{
  char cSrc[20]="";
  int i=0,Small_cnt=0;
    printf("\n Enter a string=");
    gets(cSrc);
    
    while(cSrc[i]!='\0')
    {
      if(cSrc[i]>='a'&& cSrc[i]<='z')
      {
       Small_cnt++;
      }
        i++;
    }
    printf("\n Small letters count in Given String is =%d",Small_cnt);
    getch();
    return 0;
    
}