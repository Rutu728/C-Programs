#include<stdio.h>
#include<conio.h>

int main()

{
  int Bill=0,Sum=0,i=0;
  printf("\n Enter +ve Bill values to calculate Their Sum=>\n");
  printf("\n Note: Enter zero or -ve value to stop Addition!!!\n");
    
    for(;;)
  {
   printf("\n Enter Bill %d=",++i);
   scanf("%d",&Bill);

   if(Bill<=0)
   {
     break;
   }
    Sum=Sum+Bill;
  }
  
  printf("\n Sum of Given Numbers is %d",Sum);
    getch();
    return 0;
}