#include<stdio.h>
#include<conio.h>

int main()

{
    int Day = 0;
    printf("\n Enter a Day Number Between 1-7=");
    scanf("%d",&Day);
    
    if(Day==1)
    {
      printf("\n Today is Sunday!!!");
    }
    
    else if(Day==2)
    {
      printf("\n Today is Monday!!!");
    }
    
    else if(Day==3)
    {
      printf("\n Today is Tuesday!!!");
    }
    
    else if(Day==4)
    {
      printf("\n Today is Wednesday");
    }
    
    else if(Day==5)
    {
      printf("\n Today is Thursday");
    }
    
    else if(Day==6)
    { 
      printf("\n Today is Friday");
    }
    
    else if(Day==7)
    {
      printf("\n Today is Saturday");
    }
    
    else
    {
      printf("\n Invalide Day Number...");
    }
    
    printf("\n Thanks & Good Bye!!!");
    getch();
    return 0;
}