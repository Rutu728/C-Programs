#include<stdio.h>
#include<conio.h>

int main()

{
  int i=0,j=0,r=0,c=0;
    printf("\n Enter Row value and column value to print pattern:");
    scanf("%d%d",&r,&c);
    printf("\n=========pattern==========\n\n");
    for(i=1;i<=r;i++)
    {
     for(j=1;j<=c;j++)
      {
        if(i+j<=r+1)
        {
         printf("*");
        }
      else
       {
        printf(" ");
       }
     }
    
    printf("\n");
  }
  printf("\n==========================\n");
    getch();
    return 0;
}