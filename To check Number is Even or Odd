#include<stdio.h>
#include<conio.h>

int main()

{
  int No = 0;
  printf("\n Enter a Number to check whether it is Even or Odd:");
  scanf("%d",&No);

  if(No==0)
    {
      printf("\n Number is Neutral...");
    }
    
   else if(No>0)
    {
      printf("\n %d is Even",No);
    }
    
   else 
    {
      printf("\n %d is Odd",No);
    }
    
    printf("\n Thanks!!!");
    getch();
    
    return 0;
}